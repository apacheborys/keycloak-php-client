{
    "name": "apacheborys/keycloak-php-client",
    "description": "This bundle helps to communicate your PHP application with Keycloak",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "php-http/discovery": "^1.0",
        "psr/cache": "^3.0",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^1.0 || ^2.0",
        "ramsey/uuid": "^4.7 || ^5.0",
        "beberlei/assert": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5",
        "phpstan/phpstan": "^1.11",
        "rector/rector": "^1.2",
        "squizlabs/php_codesniffer": "^3.10"
    },
    "autoload": {
        "psr-4": {
            "Apacheborys\\KeycloakPhpClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Apacheborys\\KeycloakPhpClient\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "phpcs": "phpcs --standard=phpcs.xml",
        "phpstan": "phpstan analyse -c phpstan.neon",
        "rector": "rector process --dry-run",
        "test": "phpunit",
        "check": [
            "@phpcs",
            "@phpstan",
            "@rector",
            "@test"
        ]
    },
    "suggest": {
        "symfony/http-kernel": "Needed to use the Symfony bundle.",
        "symfony/dependency-injection": "Needed to use the Symfony bundle."
    },
    "extra": {
        "symfony": {
            "bundle-class": "Apacheborys\\KeycloakPhpClient\\Symfony\\KeycloakPhpClientBundle"
        }
    },
    "authors": [
        {
            "name": "Borys Yermokhin",
            "email": "borys_ermokhin@yahoo.com"
        }
    ],
    "config": {
        "allow-plugins": {
            "php-http/discovery": false
        }
    }
}
